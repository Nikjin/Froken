<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".OptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/custom_picbg"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_115sdp"
            app:cardCornerRadius="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgprofile"
                />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_backarr_white"
            android:layout_margin="@dimen/_20sdp"
            android:id="@+id/back"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/poppins"
        android:hint="Username"
        android:textAlignment="center"
        android:textColor="#3F3794"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:drawableLeft="@drawable/ic_search2_purple"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:text="Find People"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="18sp" />



    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:drawableLeft="@drawable/ic_settings_purple"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:text="Settings"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="18sp" />


    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:drawableLeft="@drawable/ic_logout_purple"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:text="Log Out"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />





</LinearLayout>