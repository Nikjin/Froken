<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPostsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        tools:ignore="InvalidId"
        android:background="#F7F7F7">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#F7F7F7">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7">


                <ImageView
                    android:id="@+id/back"

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"

                    android:background="@drawable/ic_backarrow" />


                <TextView
                    android:id="@+id/sp"
                    android:layout_width="@dimen/_165sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_toEndOf="@+id/back"
                    android:fontFamily="@font/poppins"
                    android:text="Edit Password"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="25sp" />



            </RelativeLayout>
        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/roboto_slab"
        android:text="Froken"
        android:textColor="#513DA3"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/poppins"
        android:text="Change Password?"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editoldpass"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:drawableLeft="@drawable/ic_pass_purple"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Current password"
        android:inputType="textPassword"

        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/black"

        android:textSize="20sp" />


    <EditText
        android:id="@+id/editpass"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:drawableLeft="@drawable/ic_pass_purple"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"

        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/black"

        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/meter"
        app:layout_constraintBottom_toTopOf="@+id/login_instructions"
        app:layout_constraintEnd_toEndOf="parent"


        tools:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_4sdp"

            android:layout_marginStart="13dp"
            android:indeterminate="false"
            android:maxHeight="20dip"
            android:minHeight="20dip"
            android:progress="0" />

        <TextView
            android:id="@+id/password_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/_10sdp"

            android:text="Weak" />


    </LinearLayout>


    <TextView
        android:id="@+id/login_instructions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins"
        android:text="Your password must be at least 8 characters. With at least 1 number and 1 special character"
         />

    <EditText
        android:id="@+id/editcpass"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_28sdp"
        android:paddingBottom="@dimen/_12sdp"
        />

    <Button
        android:id="@+id/butdone"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/custom_button3"
        android:fontFamily="sans-serif"
        android:text="Done"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        />














</LinearLayout>